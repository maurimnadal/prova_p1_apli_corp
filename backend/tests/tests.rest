### -------------------------------
### Eventos
### -------------------------------

# Listar todos os eventos (qualquer usuário autenticado)
GET http://localhost:3000/events
Authorization: Bearer {{token}}

# Buscar evento por ID
GET http://localhost:3000/events/1
Authorization: Bearer {{token}}

# Criar novo evento (admin apenas)
POST http://localhost:3000/events
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "title": "Campanha de Doação de Sangue",
  "description": "Doe sangue e salve vidas!",
  "date": "2025-11-20",
  "location": "IFRS Campus",
  "max_volunteers": 50
}

# Atualizar evento (admin apenas)
PUT http://localhost:3000/events/1
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "title": "Campanha de Sangue Atualizada",
  "description": "Descrição atualizada",
  "date": "2025-11-25",
  "location": "IFRS Campus Atualizado",
  "max_volunteers": 100
}

# Remover evento (admin apenas)
DELETE http://localhost:3000/events/1
Authorization: Bearer {{token}}
